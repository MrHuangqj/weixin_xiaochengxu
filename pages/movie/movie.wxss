/* pages/movie/movie.wxss */

.title {
  height: 80rpx;
  width: 100%;
  font-size: 40rpx;
  text-align: center;
  line-height: 80rpx;
}

.movie {
  display: flex;
  background: #fff;
  padding: 20rpx;
  justify-content: space-between;
  border-bottom: 1px solid #f3f3f3;
}

.movie-message {
  display: flex;
  flex-direction: row;
  max-width: 80%;
}

.movie-message-image {
  height: 192rpx;
  width: 135rpx;
  flex-shrink: 0;
  background: #000;
}

.movie-message-main {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 0 20rpx;
}

.movie-name {
  font-weight: bold;
  font-size: 32rpx;
}

.movie-director,.movie-average,.movie-star  {
  color: #8a8a8a;
  font-size: 20rpx;
  line-height: 32rpx;
}


.movie-buy {
  display: flex;
  flex-direction: column;
  color: red;
  text-align: center;
}

.movie-buy-people {
  font-size: 20rpx;
  padding: 15rpx 0;
}

.movie-buy-button {
  border: 1px solid red;
  height: 60rpx;
  width: 120rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: red;
  line-height: 60rpx;
  background: #fff;
}
