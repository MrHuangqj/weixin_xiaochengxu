<button bindtap='getLocation' >授权位置</button>
<button bindtap='cityWeather' >城市天气</button>
<view>{{position.longitude}}</view>
<view>{{position.latitude}}</view>
<view>{{city}}</view>
<map
  id="map"
  longitude="{{position.longitude}}"
  latitude="{{position.latitude}}"
  scale="14"
  controls="{{controls}}"
  bindcontroltap="controltap"
  markers="{{markers}}"
  bindmarkertap="markertap"
  polyline="{{polyline}}"
  bindregionchange="regionchange"
  show-location
  style="width: 100%; height: 300px;"
></map>
<view class='weather'>{{weather.city}}</view>
<view class='weather'>今天温度:{{weather.wendu}}</view>
<view wx:for="{{weather.forecast}}">
{{item.date}}
风力{{item.fengli}}
{{item.fengxiang}}
{{item.high}}
{{item.low}}
{{item.type}}
</view>