<view style='padding:0 20rpx;'>
  <view class='weather' style='font-size:50rpx;'>{{weather.city}}</view>
  <view class='weather' style='font-size:100rpx;'>{{weather.wendu}}</view>
  <view style='padding:0 20rpx;'>
    <view wx:for="{{weather.forecast}}" wx:key="index" style='font-size:30rpx;margin:10rpx 0;display:flex;justify-content:space-between;'>
      <view>{{item.date}}</view>
      <view>{{item.type}}</view>
      <view>{{item.high}}~{{item.low}}</view>
    </view>
    <!-- <view>风力:{{item.fengli}}</view> -->
    <!-- <view>风向:{{item.fengxiang}}</view> -->
  </view>
</view>