/* pages/home/home.wxss */

.top-nav {
  width: 100%;
  white-space: nowrap;
  height: 92rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #b3b3b3;
  position: fixed;
  top:0;
  z-index: 100;
  background: #fff;
}
::-webkit-scrollbar{
  display: none;
}

.nav-item {
  margin: 0 15rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  display: inline-block;
}

.active {
  border-bottom: 4rpx solid #1296db;
  font-size: 32rpx;
  color: #1296db;
}

.message-item {
  border-bottom: 2rpx solid #b3b3b3;
  padding: 20rpx;
  display: flex;
  flex-direction:column;
}
.message{
  padding: 92rpx 0 0 0;
}
.message-item-title {
  font-size: 40rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
}

.message-item-description {
  display: flex;
  align-content: flex-start;
  justify-content: space-between;
}
.message-item-description-text{
  white-space: pre-wrap;
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;      /* 可以显示的行数，超出部分用...表示*/
  -webkit-box-orient: vertical;
}
.message-item-description-image{
  display: inline-block;
  width: 100rpx; 
  height: 100rpx;
  flex-shrink:0;
  padding-left: 14rpx;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}